!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %title Cryptomover
    / Include style per-controller - vendor plugins
    / Main css styles
    %link{href: "https://use.fontawesome.com/releases/v5.0.8/css/all.css", rel: "stylesheet"}
    / Main javascript files
    = javascript_include_tag 'application', 'data-turbolinks-track': true
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': true
    = csrf_meta_tags

  %body.top-navigation
    = render 'layouts/shared/top_navbar'
    %noscript
      .alert.alert-danger.text-center
        Please enable javascript to use this website.
    / Wrapper
    #wrapper
      / Main view
      -# .notice
      -#   = notice
      .alert
        = alert
      - if flash[:notice].present?
        .alert.alert-danger.text-center
          = flash[:notice]

      #agreement-modal.modal{role: "dialog", tabindex: "-1",  "data-backdrop": 'static', "data-keyboard": 'false', 'data-focus': 'true', 'data-show': 'true'}
        .modal-dialog{role: "document"}
          .modal-content
            .modal-header
              %h5.modal-title Agreement
              -# %button.close{"aria-label": "Close", "data-dismiss": "modal", type: "button"}
              -#   %span{"aria-hidden": "true"} Ã—
            .modal-body
              %p
                I hereby confirm that I am not U.S. citizen/permanent resident representing U.S citizen/permanent residents.
            .modal-footer
              %button.btn.btn-success{onclick: "agreed();", "aria-label": "Agree", "data-dismiss": "modal", type: "button"} Agree
              %button.btn.btn-danger{onclick: "location.href='https://www.google.com';", "aria-label": "Disagree", "data-dismiss": "modal", type: "button"} Disagree

      #layout-alert.alert.alert-danger
      .pace
      = yield
    / End wrapper
    / Footer
    %footer.footer
      .container
        .row
          .col-md-9
            %strong
              Developed By
              = link_to "Cryptomover", "https://www.cryptomover.com"
          .col-md-3.social
            - if session[:address].present?
              = link_to "https://medium.com/cryptomover", target: "_blank" do
                %i.fab.fa-medium.fa-2x
              = link_to "https://t.me/cryptomover", target: "_blank" do
                %i.fab.fa-telegram.fa-2x
              = link_to "https://twitter.com/cryptomover", target: "_blank" do
                %i.fab.fa-twitter.fa-2x
              = link_to "https://github.com/cryptomover-code/stellar-rails", target: "_blank" do
                %i.fab.fa-github.fa-2x
:javascript
  $(document).ready(function(){
    if (Cookies.get('agreement') !== 'true') {
      $('#agreement-modal').modal()
    }
  })
  function agreed() {
    Cookies.set('agreement', 'true', { expires: 30})
  }

  $('#wrapper').show()
  $("#layout-alert").hide()
  
  $("#portfolio-menu").click(function() {
    console.log("redirectingn portfoilo")
    document.location.href='/portfolio'
  })
